# main modifier is hyper aka Mod3
set $mod Mod3

# font
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# 1px borders by default
new_window 1pixel

# colors
# class        border  backgr. text


# ipc
ipc-socket ~/.i3/ipc.sock

#
workspace 1 output VGA-1
workspace 2 output VGA-1
workspace 3 output VGA-1
workspace 4 output VGA-1
workspace 5 output HDMI-1
workspace 6 output HDMI-1
workspace 7 output HDMI-1
workspace 8 output HDMI-1
workspace 9 output HDMI-1

# use tabbed mode by default
workspace_layout tabbed

# stack limits
#new_container stack-limit cols 4
#new_container stack-limit rows 3

# container mode switching
bindsym Print      layout default
bindsym Scroll_Lock layout stacking
bindsym Pause      layout tabbed

# changing orientation
bindsym $mod+backslash  split h
bindsym $mod+minus      split v
bindsym $mod+equal      floating toggle

# changing workspaces with F1-F9
bindsym F1 workspace 1
bindsym F2 workspace 2
bindsym F3 workspace 3
bindsym F4 workspace 4
bindsym F5 workspace 5
bindsym F6 workspace 6
bindsym F7 workspace 7
bindsym F8 workspace 8
bindsym F9 workspace 9

# move window to other workspace with shift+F1-F9
bindsym Shift+F1 move workspace 1
bindsym Shift+F2 move workspace 2
bindsym Shift+F3 move workspace 3
bindsym Shift+F4 move workspace 4
bindsym Shift+F5 move workspace 5
bindsym Shift+F6 move workspace 6
bindsym Shift+F7 move workspace 7
bindsym Shift+F8 move workspace 8
bindsym Shift+F9 move workspace 9

# move focus with wasd
bindsym $mod+space focus parent
bindsym $mod+s focus left
bindsym $mod+d focus down
bindsym $mod+e focus up
bindsym $mod+f focus right

# move client with WASD
bindsym Control+$mod+s move left
bindsym Control+$mod+d move down
bindsym Control+$mod+e move up
bindsym Control+$mod+f move right

# resize clients using WASD for growth and wasd for reduce
mode "resize" {
# These bindings trigger as soon as you enter the resize mode

# They resize the border in the direction you pressed, e.g.
# more space on its left

  bindsym s resize shrink left 10 px
  bindsym Shift+s resize grow left 10 px

  bindsym d resize grow down 10 px
  bindsym Shift+d resize shrink down 10 px

  bindsym e resize shrink up 10 px
  bindsym Shift+e resize grow up 10 px

  bindsym f resize grow right 10 px
  bindsym Shift+f resize shrink right 10 px

  bindsym Control+g mode "default"
}

bindsym $mod+x mode "resize"

# alt for moving windows with mouse
floating_modifier Mod1

# fullscreen with z
bindsym $mod+z fullscreen

# kill window with k
bindsym $mod+k kill

# exit etc
bindsym $mod+Delete reload
bindsym $mod+End restart
bindsym $mod+Next exit

bindsym F12 exec gmrun

bar {
	status_command i3status --config /etc/i3status-small.conf

}
bindsym $mod+l exec xscreensaver-command -lock

assign [class="Vacuum"] 2
exec xxkhh
exec --no-startup-id i3-msg 'exec firefox; workspace 2; exec thunderbird; exec vacuum; workspace 1'
