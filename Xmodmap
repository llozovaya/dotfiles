!
! Swap Caps_Lock and Control_L
! Set ISO_Next_Group to Control_L
!
remove Lock = Caps_Lock
keysym Caps_Lock = Control_L
add Control = Control_L
keysym Control_L = ISO_Next_Group


!
! Bind Hyper to right shift
!
remove Shift = Shift_R
keysym Shift_R = Hyper_R
add Mod3 = Hyper_R

! I use back as backspace
keysym XF86Back = BackSpace

!
! NumPad is a dot in russian layout
!
keysym KP_Decimal = KP_Decimal KP_Decimal
